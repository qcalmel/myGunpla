{% extends 'base.html.twig' %}

{% block title %}Unit index{% endblock %}

{% block body %}
    <h1>Unit index</h1>
    <h3>Nombre d'Unit√©s : {{ units|length }}</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Serie</th>
                <th>NbModels</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for unit in units %}
            <tr>
                <td>{{ unit.id }}</td>
                <td><a href="{{ path('unit_show', {'id': unit.id}) }}">{{ unit.name }}</a></td>
                <td>
                    {% for serie in unit.serie %}
                    <a href="{{ path('serie_show', {'id': serie.id}) }}" >{{ serie.name }}</a>
                    {% endfor %}
                </td>
                <td>{{ unit.models|length }}</td>
                <td>{{ unit.description }}</td>
                <td>
                    <a href="{{ path('unit_show', {'id': unit.id}) }}">show</a>
                    <a href="{{ path('unit_edit', {'id': unit.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('unit_new') }}">Create new</a>
{% endblock %}
