{% extends 'base.html.twig' %}

{% block title %}Unit{% endblock %}

{% block body %}
    <h1>Unit</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ unit.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ unit.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ unit.description }}</td>
        </tr>
        </tbody>
    </table>
    <div class="row">
    {% for model in unit.models %}
        <div class="col-auto">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top"
                     style="width: 100%;height: 250px;object-fit: contain"
                        {% if model.pictures.first is not empty %}
                            src="{{ asset('uploads/'~model.pictures.first.name) }}"
                        {% else %}
                            src="{{ asset('uploads/no-image.png') }}"
                        {% endif %}
                     alt="Card image cap">
                <div class="card-body">
                    <p class="card-text"><a href="{{ path('model_show', {'id': model.id}) }}">{{ model.name }}</a> </p>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
    <a href="{{ path('unit_index') }}">back to list</a>

    <a href="{{ path('unit_edit', {'id': unit.id}) }}">edit</a>

    {{ include('unit/_delete_form.html.twig') }}
{% endblock %}
