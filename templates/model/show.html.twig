{% extends 'base.html.twig' %}

{% block title %}Model{% endblock %}

{% block body %}
    <h1>Model</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ model.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ model.name }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ model.version }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ model.date ? model.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ model.price }}</td>
            </tr>
            <tr>
                <th>NbPart</th>
                <td>{{ model.nbPart }}</td>
            </tr>
            <tr>
                <th>GradeNumber</th>
                <td>{{ model.gradeNumber }}</td>
            </tr>
            <tr>
                <th>CodeJAN</th>
                <td>{{ model.codeJAN }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ model.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('model_index') }}">back to list</a>

    <a href="{{ path('model_edit', {'id': model.id}) }}">edit</a>

    {{ include('model/_delete_form.html.twig') }}
{% endblock %}
