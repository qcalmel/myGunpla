{% block body %}
    {% if(models is not empty) %}
        <div class="row justify-content-center">
            {% for model in models %}
                <div class="col-auto">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top"
                             style="width: 100%;height: 250px;object-fit: contain"
                                {% if model.pictures.first is not empty %}
                                    src="{{ asset('uploads/'~model.pictures.first.name) }}"
                                {% else %}
                                    src="{{ asset('uploads/no-image.png') }}"
                                {% endif %}
                             alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text"><a
                                        href="{{ path('model_show', {'id': model.id}) }}">{{ model.name }}</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        Aucune maquette trouv√©e
    {% endif %}
{% endblock %}