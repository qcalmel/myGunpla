{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ serie.name }}</td>
            </tr>
            <tr>
                <th>NameShort</th>
                <td>{{ serie.nameShort }}</td>
            </tr>
        </tbody>
    </table>
    <h3>Unit List</h3>
    <ul>
        {% for unit in serie.units %}
            <li>
                <a href="{{ path('unit_show', {'id': unit.id}) }}">{{ unit.name }}</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('serie_index') }}">back to list</a>

    <a href="{{ path('serie_edit', {'id': serie.id}) }}">edit</a>

    {{ include('serie/_delete_form.html.twig') }}
{% endblock %}
